<div class="container">
	<div class="page-header">
		<h1>Articles Tagged with <%= @tag.name %></h1>
	</div>

	<div class="row">
		<div class="col-md-2"></div>
		<div class="col-md-8">
			<ul>
				<% @tag.articles.each do |article| %>
	   			<li><%= link_to article.title, article_path(article) %></li>
				<% end %>
			</ul>
		</div>
		<div class="col-md-2"></div>
	</div>
</div>

